{
  "env": {
      "browser": true,
      "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "eqeqeq": 2,
    "curly": 2,
    "quotes": [2, "single"],
    "no-unused-vars": 2,
    "no-undef": 2,
    "no-shadow": 2,
    "comma-dangle": [2, "never"],
    "semi": [2, "always"],

    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-no-undef": 1
  },
  "globals": {
    "punk": true
  }
}
